<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			xmlns:comp="components.*"
			applicationComplete="application1_applicationCompleteHandler()"
			xmlns:js="library://ns.apache.org/royale/basic" 
				>
	<fx:Script>
		<![CDATA[
			private function application1_applicationCompleteHandler():void
			{
				myLabel.text = "myProp: " + myComp.myProp;
			}
		]]>
	</fx:Script>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	<js:initialView>
		<js:View>
			<comp:MyComp id="myComp" myProp="true"/>
			<js:Label id="myLabel"/>
		</js:View>
	</js:initialView>
</js:Application>