<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				applicationComplete="applicationCompleteHandler()"
				xmlns:js="library://ns.apache.org/royale/basic" 
				>
	<fx:Script>
		<![CDATA[
			private function applicationCompleteHandler():void
			{
				myLabel.text = "Default scrollbar width is: " + myBead.scrollbarWidth;
			}
		]]>
	</fx:Script>
	<js:beads>
		<js:GetScrollbarWidth id="myBead"/>
	</js:beads>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	<js:initialView>
		<js:View>
			<js:Label id="myLabel" x="20" y="20"/>
		</js:View>
	</js:initialView>
</js:Application>