<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/royale/basic" 
				>
	<fx:Script>
		<![CDATA[
			import org.apache.royale.core.IFormatBead;

			private function dateChangedHandler():void
			{
				var formatter:IFormatBead = df.getBeadByType(IFormatBead) as IFormatBead;
				label.text = formatter.formattedString;
			}
		]]>
	</fx:Script>
	<js:beads>
		<js:ApplicationDataBinding/>
	</js:beads>
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	
	<js:initialView>
		<js:View>
			<js:DateField id="df" change="dateChangedHandler()"/>
			<js:Label y="50" id="label"/>
		</js:View>
	</js:initialView>
</js:Application>
