<?xml version="1.0" encoding="utf-8"?>
<js:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:js="library://ns.apache.org/flexjs/basic"
				>
	
	<js:valuesImpl>
		<js:SimpleCSSValuesImpl />
	</js:valuesImpl>	
	<js:beads>
		<js:ApplicationDataBinding/>
	</js:beads>
	<js:initialView>
		<js:View>
			<js:VContainer>
				<js:style>
					<js:SimpleCSSStyles padding="10"/>
				</js:style>
				<js:TextInput id="textInput">
					<js:beads>
						<js:TextPromptBead prompt="Enter text here"/>
					</js:beads>
				</js:TextInput>
				<js:Label text="{textInput.text}"/>
			</js:VContainer>
		</js:View>
	</js:initialView>
</js:Application>
